<div class="row">
  <div class="col-xs-6">
    <%= form_for [:users, product] do |f| %>
      <%= attachment_image_tag product, :image, :fill, 400, 400, format: 'jpeg', fallback: "no_image.jpg", size: '400x400' %><br>
      <%= f.attachment_field :image %>
  </div>
  <div class="col-sm-5">
    <div class="product-create">
      <div class="form-group">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :genre_id, "ジャンル" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :title, {include_blank: '--選択してください--'}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :jan_code, "JANコード" %>
        <%= f.text_field :jan_code, class: "form-control" %>
      </div>
      <div class="product-button">
        <%= f.submit "実行", class: "btn btn-primary" %>
      <div>
      <% end %>
    </div>
  </div>
</div>

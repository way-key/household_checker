<div class=container>

  <div class="row">
    <h2 class="user-title">ログイン画面</h2>
  </div>

  <div class="row">
    <div class="col-xs-8 offset-2 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "◯◯◯◯◯@△△△△.□□□□□", class: "form-control", size: "50" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "・・・・・・・・", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me, class: "check-box" %>
            <span>パスワードを記憶</span>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>


  <div class="row">
    <div class="col-xs-8 offset-2">
      <h4 class="sign-link">新規会員登録は　<%= link_to  "こちら", new_user_registration_path %>　から</h4>
    </div>
  </div>

</div>

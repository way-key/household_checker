<div class="container">

  <div class="row">
    <h2 class="admin-title">商品一覧</h2>
  </div>

  <div class="row">
    <div class="product-search">
      <%= search_form_for(@q, url: admins_products_path) do |f| %>
        <div class="form-inline">
          <%= f.label :name, "商品名：" %>
          <%= f.search_field :name_cont, class: "form-control product-search__field" %>
          <%= f.submit "検索", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="product-list">
      <table class="table">
        <thead>
          <tr>
            <th colspan="2" class="product-list__name"><%= sort_link(@q, :name, "商品名") %></th>
            <th class="product-list__genre"><%= sort_link(@q, :genre_id, "ジャンル") %></th>
            <th class="product-list__status"><%= sort_link(@q, :status, "ステータス") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= attachment_image_tag product, :image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %></td>
              <td><%= product.name %></td>
              <td><%= product.genre.title %></td>
              <td><%= product.status ? "表示中" : "" %></td>
              <td><%= link_to "編集する", edit_admins_product_path(product), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<%= paginate @products, class: "paginate" %>
</div>
